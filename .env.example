# Trading Configuration
# Minimum price change threshold to trigger signal generation (0.1% = 0.001)
MIN_PRICE_CHANGE_THRESHOLD=0.001

# Risk management settings
RISK_EQUITY=10000.0
RISK_PER_TRADE=0.01

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# === Transaction Execution Settings ===

# Your Solana wallet public key (required for trade execution)
# Get this from your Phantom/Solflare wallet or generate with solana-keygen
OWNER_PUBKEY=YOUR_SOLANA_PUBKEY_HERE

# Your private key in Base58 format (ONLY needed for real trades, not simulation)
# ⚠️ NEVER commit this to version control!
# Generate with: solana-keygen new --no-bip39-passphrase --outfile keypair.json
# Convert to base58 with: solana-keygen pubkey keypair.json --keypair-path keypair.json
# SOLANA_SECRET_KEY_B58=YOUR_BASE58_PRIVATE_KEY_HERE

# DEX Aggregator API Keys (optional - public APIs work without keys)
# Get Photon API key from: https://photon-sol.tips/
# PHOTON_API_KEY=your_photon_api_key_here

# Get GMGN API key from: https://docs.gmgn.ai/
# GMGN_API_KEY=your_gmgn_api_key_here

# Custom API endpoints (optional)
# PHOTON_BASE=https://photon-sol.tips/api/v1
# GMGN_BASE=https://gmgn.ai/defi/quotev2

# Default execution settings
DEFAULT_SLIPPAGE_BPS=100        # 1% slippage
DEFAULT_PRIORITY_FEE=0          # No priority fee
DEFAULT_SIMULATE_ONLY=true      # Always simulate by default for safety
